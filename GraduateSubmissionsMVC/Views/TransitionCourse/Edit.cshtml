@model GraduateSubmissionsMVC.Models.TransitionCourseModel

@{
    ViewBag.Title = "Edit Transition Course";
}

<h2>Edit Transition Course</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
	<table class="editor-box">
		<tr class="unit">
			<td class="editor-label">
				@Html.LabelFor(model => model.DepartmentID, "Department")
			</td>
			<td class="editor-field">
				@Html.DropDownList("DepartmentID", String.Empty)
				@Html.ValidationMessageFor(model => model.DepartmentID)
			</td>
		</tr>
		<tr class="unit">
			<td class="editor-label">
				@Html.LabelFor(model => model.Name)
			</td>
			<td class="editor-field">
				@Html.EditorFor(model => model.Name)
				@Html.ValidationMessageFor(model => model.Name)
			</td>
		</tr>
		<tr class="unit">
			<td class="editor-label">
				@Html.LabelFor(model => model.Number)
			</td>
			<td class="editor-field">
				@Html.EditorFor(model => model.Number)
				@Html.ValidationMessageFor(model => model.Number)
			</td>
		</tr>
		<tr class="unit">
			<td class="editor-label">
				@Html.LabelFor(model => model.CreditHour)
			</td>
			<td class="editor-field">
				@Html.EditorFor(model => model.CreditHour)
				@Html.ValidationMessageFor(model => model.CreditHour)
			</td>
		</tr>
		<tr class="unit" style="margin-left: auto; margin-right: auto; width: 400px;">
			<td class="editor-label" valign="top">
				@Html.LabelFor(model => model.Description)
			</td>
			<td class="editor-field-larger">
				@Html.EditorFor(model => model.Description)
				@Html.ValidationMessageFor(model => model.Description)
			</td>
		</tr>
		<tr class="unit">
			<td>
				@Html.ActionLink("Back", "Index")
			</td>
			<td class="unit-upload">
				<input type="submit" value="Edit" />
			</td>
		</tr>
	</table>
}